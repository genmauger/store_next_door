<p id="notice"><%= notice %></p>

<h1>Facility Spaces</h1>

<table>
  <thead>
    <tr>
      <th>Height</th>
      <th>Width</th>
      <th>Length</th>
      <th>Rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facility_spaces.each do |facility_space| %>
      <tr>
        <td><%= facility_space.height %></td>
        <td><%= facility_space.width %></td>
        <td><%= facility_space.length %></td>
        <td><%= number_to_currency facility_space.rate %></td>

        <td><%= image_tag facility_space.image_url(:medium), :class => "style_image" unless facility_space.image_data.nil? %></td>

        <td><%= link_to 'Show', facility_space %></td>
        <td><%= link_to 'Destroy', facility_space, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>



<br>

