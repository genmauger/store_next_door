<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_area :first_name, id: :profile_first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_area :last_name, id: :profile_last_name %>
  </div>

  <div class="field">
    <%= form.label :mobile %>
    <%= form.text_area :mobile, id: :profile_mobile %>
  </div>

  <div class="field">
    <%= form.label :street_address %>
    <%= form.text_area :street_address, id: :profile_street_address %>
  </div>

  <div class="field">
    <%= form.label :suburb %>
    <%= form.text_area :suburb, id: :profile_suburb %>
  </div>

  <div class="field">
    <%= form.label :postcode %>
    <%= form.text_area :postcode, id: :profile_postcode %>
  </div>

  <div class="field">
    <%= form.label :country %>
    <%= form.text_area :country, id: :profile_country %>
  </div>

  <div class="field">
    <%= form.hidden_field :latitude, id: :profile_latitude %>
  </div>

  <div class="field">
    <%= form.hidden_field :longitude, id: :profile_longitude %>
  </div>

  <div class="field">
    <%= form.label :avatar %>
    <%= form.hidden_field :image, value: @profile.cached_image_data %>
    <%= form.file_field :image, id: :photo_image_data %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
